@model FrontEnd.Models.C_AnimalesViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" enctype="multipart/form-data">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="margin-top: 12%; margin-left: 10%; margin-right: 10%">
            <h1>Registrar Animal</h1>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group" style="font-weight:bold">
                @Html.LabelFor(model => model.nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />


            <div class="form-group" style="font-weight:bold">
                @Html.LabelFor(model => model.IdTamano, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IdTamano, new SelectList(Model.Tamanos, "IdTamanos", "tamanos"), "--Seleccionar--")
                    @Html.ValidationMessageFor(model => model.IdTamano, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />

            <div class="form-group" style="font-weight:bold">
                @Html.LabelFor(model => model.IdTemperamento, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.IdTemperamento, new SelectList(Model.Temperamentos, "IdTemperamentos", "temperamento"), "--Seleccionar--")
                    @Html.ValidationMessageFor(model => model.IdTemperamento, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />

            <div class="form-group" style="font-weight:bold">
                @Html.LabelFor(model => model.especie, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.especie, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.especie, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />


            <div class="form-group" style="font-weight:bold">
                @Html.LabelFor(model => model.raza, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.raza, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.raza, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />


            <div class="form-group" style="font-weight:bold">
                @Html.LabelFor(model => model.sexo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.sexo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.sexo, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />



            <div class="form-group" style="font-weight:bold">
                @Html.LabelFor(model => model.fechaNacimiento, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.fechaNacimiento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fechaNacimiento, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />


            <div class="form-group" style="font-weight:bold">
                @Html.LabelFor(model => model.otrasSenas, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.otrasSenas, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.otrasSenas, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />


            <div class="form-group" style="font-weight:bold">
                @Html.LabelFor(model => model.padecimientos, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.padecimientos, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.padecimientos, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />


            <div class="form-group" style="font-weight:bold">
                @Html.LabelFor(model => model.ImagenURL, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    <input type="file" name="UploadImage" id="UploadImage" required>
                </div>
            </div><br />


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Registrar" style="border:0; color: #fff; margin-top:10px; border-radius:5px;background:linear-gradient(to right, #0ba360, #3cba92, #30dd8a, #2bb673); box-shadow: 0 4px 15px 0 rgba(23, 168, 108, 0.75); letter-spacing:1px; padding:12px 10px" />
                </div>
            </div><br />

            <div>
                &nbsp;&nbsp; @Html.ActionLink("Regresar a la lista", "Index")
            </div>

        </div><br />
    }


</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
