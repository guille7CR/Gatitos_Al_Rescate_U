@model FrontEnd.Models.C_ProvinciaViewModel

@{
    ViewBag.Title = "ReporteCasaCuna";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div style="margin-top: 12%; margin-left: 10%; margin-right: 10%">


        <div style="margin-top: 12%; margin-left: 10%; margin-right: 10%; text-align:center">

            <h2>Reporte de Casas Cuna por Provincia</h2>
            <br />
            <br />
        </div>
        
        @using (Html.BeginForm("ReporteCasaCuna", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <h4>Por favor seleccione la provincia deseada en el menú de abajo</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @*@Html.LabelFor(model => model.idProvincia, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.idProvincia, new SelectList(Model.ListaProvincia, "Value", "Text"), "--Seleccionar--")
                        @Html.ValidationMessageFor(model => model.idProvincia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Ver Reporte" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
        <hr />
        <div>
            @Html.ActionLink("Volver", "C_ReportesIndex")
        </div>
    </div>
