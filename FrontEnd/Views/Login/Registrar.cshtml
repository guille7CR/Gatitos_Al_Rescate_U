@* SCRIPT DE SWEETALERT PARA ELIMINAR UN REGISTRO MEDIANTE VENTANA MODAL *@
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>




<script>
    function Button1() {
        event.preventDefault(); // prevent form submit
        var form = document.forms["myForm"]; // storing the form
        swal({
            title: "Desea confirmar su registro?",
            text: "Operacion de registro",
            showCancelButton: true,
            icon: "info",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    form.submit();
                    swal("Registro exitoso", "Un administrador le asignara un rol para ingresar ", "success");
                } else {
                    swal("Cancelado", "El registro se ha cancelado", "error");
                }
            });
    }
</script>



