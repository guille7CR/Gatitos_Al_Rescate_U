@model IEnumerable<FrontEnd.Models.C_AdopcionesViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div style="margin-top: 12%; margin-left: 10%; margin-right: 10%">


    <h1>Listado de Adopciones</h1>

    <p>
        @Html.ActionLink("Registrar Nueva Adopción", "Create")&nbsp;&nbsp;
        <i class="fas fa-plus-circle" style="font-size:25px; color:#f4623a"></i>
    </p>
    <div class="form-group col-sm-3">

        <label>Buscar:</label><br />
        <input type="text" onkeyup="Search_Gridview(this, 'lista_Adopciones')">
    </div>
    <br>

    <table class="table" id="lista_Adopciones">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPersona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAnimal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAdopcion)
            </th>

            <th style="width:120px">
                <p>Acciones&nbsp;&nbsp;</p>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.C_Persona.nombrePersona)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.C_Animales.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaAdopcion)
                </td>

                <td style="width:120px">
                    <a href="@Url.Action("Edit", "C_Adopciones", new {id=item.IdAdopcion})">

                        <i class="fas fa-edit" style="font-size:18px"></i>
                    </a>&nbsp;

                    <a href="@Url.Action("Details", "C_Adopciones", new { id = item.IdAdopcion })">

                        <i class="fas fa-eye" style="font-size:18px"></i>
                    </a>&nbsp;

                    <a href="@Url.Action("Delete", "C_Adopciones", new { id = item.IdAdopcion })">

                        <i class="fas fa-trash-alt" style="font-size:18px"></i>
                    </a>&nbsp;

                </td>
            </tr>
        }

    </table>
</div>

@* Script para el search del Index que apunta al archivo de js *@
<script src="~/Scripts/Search.js"></script>
